{{!
    @template block_timetracker/main

    This template will render the main block content.

    Variables required for this template:
    * shouldseetimer - Whether the timer should be displayed.
    * shouldseereport - Whether the report button should be displayed.
    * coursetime - The time the course is set to.
    * courseid - The id of the course.

    Example context (json):
    {
        "shouldseetimer": true,
        "shouldseereport": true,
        "coursetime": "10:15:30",
        "courseid": "1234"
    }

}}

{{#shouldseetimer}}
    <div class='timer-container mb-1'>
        <div class='timer-display w-100'>
            <p class='h3' id='timer'>00:00:00</p>
            <div class="moreinfo">
                <div class="info-text">
                    <span class='info-label'>{{#str}}reportedtime, block_timetracker{{/str}}: </span>
                    <span class='info-value' id='reportedtime'>00:00:00</span>
                </div>
                <div class="info-text">
                    <span class='info-label'>{{#str}}inactivitytime, block_timetracker{{/str}}: </span>
                    <span class='info-value' id='inactivitytime'>00:00:00</span>
                </div>
                <div class="info-text">
                    <span class='info-label'>{{#str}}totaltime, block_timetracker{{/str}}: </span>
                    <span class='info-value' id='totaltime'>{{formatted_time}}</span>
                </div>
            </div>
        </div>
    </div>
{{/shouldseetimer}}

{{#shouldseereport}}
    <div class="d-flex justify-content-center">
        <a href="{{config.wwwroot}}/blocks/timetracker/index.php?id={{courseid}}" class="btn btn-primary">
        <i class="icon fa fa-bar-chart"></i> {{#str}}viewreport, block_timetracker{{/str}}
        </a>
    </div>
{{/shouldseereport}}

<div class="d-flex justify-content-center">
    <span class="timetracker-plugin-info">{{#str}}plugin_info, block_timetracker{{/str}}</span>
</div>